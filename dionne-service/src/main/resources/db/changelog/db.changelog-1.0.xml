<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">


	<changeSet author="doddt" id="create-user-table">
		<createTable tableName="user">
			<column name="user_id" type="varchar(36)"/>
			<column name="first_name" type="varchar(30)"/>
			<column name="last_name" type="varchar(30)"/>
		</createTable>
	</changeSet>
	<changeSet author="doddt" id="add-username-column">
		<addColumn tableName="user">
			<column name="username" type="varchar(255)"/>
		</addColumn>
	</changeSet>
	<changeSet author="dpasion" id="add-email-id-column">
		<addColumn tableName="user">
			<column name="email-id" type="varchar(36)"/>
		</addColumn>
	</changeSet>
	<changeSet id="add-email-table" author="dpasion">
		<addColumn tableName="email">
			<column name="email_id"></column>
			<column name="user_id"></column>
			<column name="is_primary"></column>
			<column name="email"></column>
		</addColumn>
	</changeSet>
</databaseChangeLog>