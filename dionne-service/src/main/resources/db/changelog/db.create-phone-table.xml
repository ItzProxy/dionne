<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">


    <changeSet author="dpasion" id="create-phone-table">
        <createTable tableName="phone">
            <column autoIncrement="true" name="phone_id" type="varchar(11)" startWith="1" incrementBy="1">
                <constraints primaryKey="true"/>
            </column>
            <column name="user_id" type="varchar(36)">
                <constraints foreignKeyName="fk_user_id" references="user(user_id)"
                             nullable="false"/>
            </column>
            <column name="phone" type="varchar(10)"/>
            <column name="is_primary_phone" type="boolean"/>
        </createTable>
    </changeSet>
</databaseChangeLog>